<h1> 
    New Record
</h1>

<form action="/orderdetail" method="post">
    <table>
        <tr> 
            <td> Price: </td> 
            <td> 
                <input type="text" name="price" required>  
            </td> 
        </tr>
        <tr> 
            <td> Quantity: </td> 
            <td> 
                <input type="number" name="qty" required>  
            </td> 
        </tr>
        <tr> 
            <td> Product ID: </td> 
            <td> 
                <input type="number" name="product_id" required> 
            </td> 
        </tr>
        <tr> 
            <td> Order ID: </td> 
            <td> 
                <input type="number" name="order_id" required> 
            </td>
        </tr>
    </table>
    <button type="submit">
        Save
    </button>
</form>