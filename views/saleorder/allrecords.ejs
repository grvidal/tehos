<% if (allrecs.length > 0) {%>
    <table border="1">
            <tr>
                <th> Order ID </th>
                <th> Sale Date </th>
                <th> Payment Status </th>
                <th> Authorization Num </th>
                <th> Customer ID </th>
            </tr>
        <% allrecs.forEach((recref, index) => { %>
            <tr>
                <td><%= recref.order_id %></td>
                <td><%= recref.saledate %></td>
                <td><%= recref.paymentstatus %></td>
                <td><%= recref.authorizationnum %></td>
                <td><%= recref.customer_id %></td>
                <td>
                    <a href='/saleorder/<%= recref.order_id %>/show'> 
                        Details
                    </a>
                </td>
                <td>
                    <a href='/saleorder/<%= recref.order_id %>/edit'>
                        Edit
                    </a>
                </td>
                <td>
                    <a href='/saleorder/<%= recref.order_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">
                        Delete
                    </a>
                </td>
            </tr>
        <% }); %>
    </table>
<% } 

else { %>
    <p>No Records Available</p>
<% } %>

<p> 
    <a href='/saleorder/addrecord'>
        Add New
    </a> 
</p>