<h1> 
    New Record
</h1>
 
<form action="/review" method="post">
    <table>
        <tr> 
            <td> Review Date: </td> 
            <td> 
                <input type="date" name="reviewdate" required>  
            </td> 
        </tr>
        <tr> 
            <td> Comments: </td> 
            <td> 
                <textarea name="comments" rows="10" cols="30" placeholder="Comment"></textarea>
            </td>  
        </tr>
        <tr> 
            <td> Rating: </td> 
            <td> 
                <input type="number" name="rating" required>  
            </td>
        </tr>
        <tr> 
            <td> Status: </td> 
            <td> 
                <select  name="status"  required>
                    <option>
                        Publish
                    </option>
                    <option>
                        Contingent
                    </option>
                    <option>
                        Coming Soon
                    </option>
                </select> 
            </td> 
        </tr>
        <tr> 
            <td> Customer ID: </td> 
            <td> 
                <input type="number" name="customer_id" required> 
            </td> 
        </tr>
        <tr> 
            <td> Product ID: </td> 
            <td> 
                <input type="number" name="product_id" required> 
            </td>
        </tr>
    </table>
    <button type="submit">
        Save
    </button>
</form>