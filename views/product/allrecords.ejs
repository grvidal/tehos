<% if (allrecs.length > 0) {%>
    <table border="1">
            <tr>
                <th> ProductID </th>
                <th> Name </th>
                <th> Image </th>
                <th> Description </th>
                <th> Weight </th>
                <th> Length </th>
                <th> Width </th>
                <th> Price </th>
                <th> Status </th>
                <th> PackagingID </th>
                <th> CategoryID </th>
            </tr>
        <% allrecs.forEach((recref, index) => { %>
            <tr>
                <td><%= recref.product_id %></td>
                <td><%= recref.productname %></td>
                <td><%= recref.productimage %></td>
                <td><%= recref.description %></td>
                <td><%= recref.weight %></td>
                <td><%= recref.length %></td>
                <td><%= recref.width %></td>
                <td><%= recref.price %></td>
                <td><%= recref.status %></td>
                <td><%= recref.packaging_id %></td>
                <td><%= recref.category_id %></td>
                <td>
                    <a href='/product/<%= recref.product_id %>/show'> 
                        Details
                    </a>
                </td>
                <td>
                    <a href='/product/<%= recref.product_id %>/edit'>
                        Edit
                    </a>
                </td>
                <td>
                    <a href='/product/<%= recref.product_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');">
                        Delete
                    </a>
                </td>
            </tr>
        <% }); %>
    </table>
<% } 

else { %>
    <p>Not Records Available</p>
<% } %>

<p> 
    <a href='/product/addrecord'>
        Add New
    </a> 
</p>