<h1> 
    New Record
</h1>

<form action="/product" method="post">
    <table>
        <tr> 
            <td> Name: </td> 
            <td> 
                <input type="text" name="productname" required>  
            </td> 
        </tr>
        <tr> 
            <td> Image: </td> 
            <td> 
                <input type="text" name="productimage" required>  
            </td> 
        </tr>
        <tr> 
            <td> Description: </td> 
            <td> 
                <textarea name="description" rows="10" cols="30" placeholder="Description"></textarea>
            </td>  
        </tr>
        <tr> 
            <td> Weight: </td> 
            <td> 
                <input type="text" name="weight" required>  
            </td>
        </tr>
        <tr> 
            <td> Length: </td> 
            <td> 
                <input type="text" name="length" required>  
            </td> 
        </tr>
        <tr> 
            <td> Width: </td> 
            <td> 
                <input type="text" name="width" required>  
            </td> 
        </tr>
        <tr>
            <td> Price: </td> 
            <td>
                <input type="text" name="price" required> 
            </td> 
        </tr>
        <tr> 
            <td> Status: </td> 
            <td> 
                <select  name="status"  required>
                        <option selected disabled>
                            Choose Status
                        </option>
                        <option>
                            Available
                        </option>
                        <option>
                            Contingent
                        </option>
                        <option>
                            Coming Soon
                        </option>
                </select> 
            </td> 
        </tr>
        <tr> 
            <td> PackagingID: </td> 
            <td> 
                <input type="number" name="packaging_id" required> 
            </td> 
        </tr>
        <tr> 
            <td> CategoryID: </td> 
            <td> 
                <input type="number" name="category_id" required> 
                </td>
        </tr>
    </table>
    <button type="submit">
        Save
    </button>
</form>