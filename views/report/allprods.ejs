<h2>Product Listing</h2>

<% if (allrecs.length > 0) {%>
    <table border="1">
            <tr>
                <th> Product ID </th>
                <th> Name </th>
                <th> Image </th>
                <th> Description </th>
                <th> Weight </th>
                <th> Length </th>
                <th> Width </th>
                <th> Price </th>
                <th> Status </th>
                <th> Packaging ID </th>
                <th> Category ID </th>
            </tr>
        <% allrecs.forEach((recref, index) => { %>
            <tr>
                <td><%= recref.product_id %></td>
                <td><%= recref.productname %></td>
                <td><%= recref.productimage %></td>
                <td><%= recref.description %></td>
                <td><%= recref.weight %></td>
                <td><%= recref.length %></td>
                <td><%= recref.width %></td>
                <td><%= recref.price %></td>
                <td><%= recref.status %></td>
                <td><%= recref.packaging_id %></td>
                <td><%= recref.category_id %></td>
            </tr>
        <% }); %>
    </table>
<% } 

else { %>
    <p>No Records Available</p>
<% } %>

